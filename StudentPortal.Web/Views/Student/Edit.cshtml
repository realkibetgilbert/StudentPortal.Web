<h1>Edit Student</h1>

@model StudentPortal.MODEL.Student

@if (Model is null)
{
    <p>Not student with id was found.......</p>
}

else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="PhoneNumber" />
        </div>
        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subcribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Student" asp-route-id="@Model.Id">Delete</button>
        </div>
    </form>
}