@{
}
@model StudentPortal.Web.Models.AddStudentViewModel

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subcribed" asp-action="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary">Save</button>
    </div>
</form>
